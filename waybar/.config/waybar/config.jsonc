    "headphones": "ÔÄ•",
    "bluetooth": "Û∞•∞",
    "handsfree": "ÔÄ•",
    "headset": "Û±°¨",
    "phone": "ÔÇï",
    "portable": "ÔÇï",
    "car": "ÔÜπ",
    "default": ["üï®","üï©","üï™"]
  },
  "justify": "center",
  "on-click": "amixer sset Master toggle",
  "on-click-right": "pavucontrol",
  "tooltip-format": "{icon}  {volume}%"
},

"jack": {
    "format": "{} Û±éî",
    "format-xrun": "{xruns} xruns",
    "format-disconnected": "DSP off",
    "realtime": true
},

"tray": {
    "icon-size": 14,
    "spacing": 10
},

"upower": {
    "show-icon": false,
    "hide-if-empty": true,
    "tooltip": true,
    "tooltip-spacing": 20
},

"custom/powerDraw": {
    "format": "ÔÄë",
    "on-click": "wlogout"
}

}
